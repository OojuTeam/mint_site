<script type="text/javascript">
  window.contractDetails = {
    // marketing details
    launchDateTime: '<%= @project.launch_epoch %>', // epoch time; used on mint page, set to past date to disable

    // asset details, determined by smart contract
    mintDefaultQuantity: '1', // was @project.mint_qty_default
    maxPurchaseQuantity: '<%= @smart_contract.mint_qty_max %>',
    purchasePriceDisplay: '<%= @smart_contract.purchase_price_friendly %>', // user friendly integer value, e.g. 26 (MATIC), 5 (KLAY), etc

    // network details
    network: '<%= @smart_contract.network %>', // options: 'matic', 'maticmum', 'klaytn', 'ethereum', etc. MetaMaskOnboarding uses to detect correct network (https://docs.ethers.io/v5/api/providers/api-providers/)
    purchaseWithTokenName: '<%= purchase_with_token_name %>',
    networkTransactionBaseUri: '<%= network_transaction_base_uri %>',
    klaytnGas: '1000000',

    // contract details
    purchasePrice: '<%= @smart_contract.purchase_price.round(0) %>',
    contractAddress: '<%= @smart_contract.address %>',
    contractAbi: <%= @smart_contract.abi.to_json.html_safe %>
  }
</script>
