<% if @project.bg_image_url? %>
  <%= image_tag @project.bg_image_url, class: "object-center bg-image" %>
<% end %>

<% @setup = {
  title: 'Mint',
  description: 'Mint an NFT asset.',
  og_image: asset_url('ooju/shared/placeholder.png')
}
%>

<%= render partial: "shared/heading_web3", locals: { title_intro: '', title: 'Mint', additional_text: '' } %>

<div class="flex">
  <div class="flex-auto"></div>
  <div class="grid grid-cols-3 gap-0 md:gap-4 text-base md:text-2xl">
    <!-- Price per NFT -->
    <div id="label-price-per-nft" class="text-right flex-shrink-1 w-42">Price per NFT</div>
    <div class="xs:flex-shrink w-2"></div>
    <div id="price-per-asset"></div>
    <!-- Max per Transaction -->
    <div id="label-max-per-transaction" class="text-right flex-shrink-1 w-42">Max per Transaction</div>
    <div class="xs:flex-shrink w-2"></div>
    <div id="max-per-transaction"></div>
    <!-- Quantity -->
    <div id="label-quantity" class="text-right flex-shrink-1 w-42">Quantity</div>
    <div class="xs:flex-shrink w-2"></div>
    <div>
      <select id="qty" name="quantity" class="bg-indigo-100 pl-2 px-6 py-1 rounded">
        <option selected>1</option>
      </select>
    </div>
    <!-- Total -->
    <div id="label-total" class="text-right flex-shrink-1 w-42">Total</div>
    <div class="xs:flex-shrink w-2"></div>
    <div id="totalValue"></div>
  </div>
  <div class="flex-auto"></div>
</div>

<div class="text-center">
  <!-- Countdown Timer -->
  <div id="coming_soon" style="min-height: 24px" class="my-8 text-4xl">
    <h2 id="launch-countdown" class="text-base font-semibold text-white tracking-wide uppercase">...</h2>
  </div>

  <!-- Mint Features -->
  <div id="cta_buttons" class="invisible mt-5 px-4 sm:mt-8 sm:flex sm:justify-center lg:justify-center">
    <div class="rounded-md shadow">
      <!-- Connect Wallet -->
      <p id='onboard' class='cursor-pointer w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10'>
      </p>
    </div>
    <div class="mt-3 sm:mt-0 sm:ml-3 hidden" id="begin-mint-container">
      <!-- Mint Now -->
      <p id='begin-mint' class='cursor-pointer w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10'>
        Mint Now
      </p>
    </div>
  </div>
  <p id="completed-transaction-link" class="mt-2 text-center"></p>
</div>

<%= render "contract_details" %>
<%= render "calculator_js" %>

<% if Project::CURRENT.network == 'klaytn' %>
  <%= render "kaikas_js" %>
<% else %>
  <%= render "metamask_js" %>
<% end %>

<%= render "translations_js" %>
<%= render "countdown_timer_js" %>
